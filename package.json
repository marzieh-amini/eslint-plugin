{
  "name": "eslint-plugin-modern",
  "version": "1.0.0",
  "description": "Custom ESLint plugin for React + TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "pnpm run typecheck && pnpm run build"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "typescript",
    "react"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/rule-tester": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "eslint": "^9.35.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

{
  "name": "eslint-plugin-modern",
  "version": "1.0.0",
  "description": "Custom ESLint plugin for React + TypeScript (console, import, spell, type-check)",
 "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "pnpm run build && jest --config jest.config.cjs",
    "prepublishOnly": "pnpm run typecheck && pnpm run build && pnpm test"
  },
 "keywords": ["eslint","eslintplugin","eslint-plugin","typescript","react"],
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/rule-tester": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
